{
  "name": "Base TypeScript React",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:style": "postcss src/styles/index.css -o src/styles/tailwind.css",
    "start": "cross-env NODE_ENV=development npm run build:style && react-scripts start",
    "build": "npm run build:style && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  },

  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@types/jest": "24.0.21",
    "@types/node": "12.12.3",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.3",
    "autoprefixer": "^9.7.1",
    "cross-env": "^6.0.3",
    "cssnano": "^4.1.10",
    "postcss": "^7.0.21",
    "postcss-cli": "^6.1.3",
    "react-scripts": "3.2.0",
    "tailwindcss": "^1.1.3",
    "typescript": "3.6.4"
  }
}
